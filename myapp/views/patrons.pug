extends nav.pug
block content
  h1 Patrons
  p
    a.button(href='/patrons/new_patron') Create New Patron
    
  form(action=`/patrons/all_patrons/search`, method='POST')
    input(type='text' name='searchInput' placeholder='Search for...')
    input(type='submit', value='Search')
  table
    thead
      tr
        th Name 
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr
          td
            a(href='patron_detail/' + patron.id)= patron.first_name + " " + patron.last_name
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip_code
